<p id="notice"><%= notice %></p>

<h1> <%= t('mainTitle') %></h1>

<table border="1">
  <thead>
    <tr>
      <th><%= t('title') %></th>
      <th><%= t('description') %></th>
      <th><%= t('quantity') %></th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>

    <tr>
      <td><%= post.title %></td>
      <td><%= post.description %></td>
      <td><%= post.quantity %></td>       

      <td><%= link_to t('btn_show'), post %></td>
      <td>
        
       
        <%= link_to t('btn_edit'), edit_post_path(post) %></td>

        <td><%= link_to t('btn_destroy'), post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to t('newPost'), new_post_path %>
